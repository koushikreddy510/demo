# Simple HTTP server for React frontend
FROM nginx:alpine

# Copy built frontend
COPY dist/ /usr/share/nginx/html/

# Custom nginx config to serve over HTTP only
RUN echo 'server { \
    listen 80; \
    server_name _; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
